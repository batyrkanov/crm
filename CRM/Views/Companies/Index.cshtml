@model IEnumerable<CRM.Models.Company>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<p>
    @Html.ActionLink("Создать", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            Наименование компании
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyName)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.CompanyId }) |
            @Html.ActionLink("Подробно", "Details", new { id=item.CompanyId }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.CompanyId })
        </td>
    </tr>
}

</table>
