@model IEnumerable<CRM.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            Наименование категории
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.CategoryId }) |
            @Html.ActionLink("Просмотреть", "Details", new { id=item.CategoryId }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.CategoryId })
        </td>
    </tr>
}

</table>
