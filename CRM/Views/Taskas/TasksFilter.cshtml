@model PagedList.IPagedList<CRM.Models.Taska>
@using PagedList.Mvc;

<div class="row">
    <div class="col-md-12">
        <div>
            <div id="result" class="content">
                @if (Model.Count <= 0)
                {
                    <p>Нет результатов</p>
                    <table id="list-table"></table>

                }
                else
                {
                    <table class="table table-hover table-responsive table-condensed  table-striped" id="list-table">
                        <caption>Список сотрудников</caption>
                        <tbody>
                            <tr>
                                <th>Наименование задачи</th>
                                <th>Компания</th>
                                <th>Категория</th>
                                <th>Дата</th>
                                <th>Менеджер</th>
                                <th>Статус</th>
                                <th>Описание</th>
                                <th></th>
                            </tr>
                            @foreach (CRM.Models.Taska item in Model)
                            {
                            <tr>
                                <td class="td-title">@Html.DisplayFor(model => item.TaskName)</td>
                                <td class="td-title">@Html.DisplayFor(model => item.CompanyName)</td>
                                <td class="td-title">@Html.DisplayFor(model => item.CategoryName)</td>
                                <td class="td-title">@Html.DisplayFor(model => item.TaskDate)</td>
                                <td class="td-title">@Html.DisplayFor(model => item.Users.Name) @Html.DisplayFor(model=> item.Users.Surname)</td>
                                <td class="td-title">@Html.DisplayFor(model => item.TaskStatus)</td>
                                <td class="td-title">@Html.DisplayFor(model => item.Description)</td>
                            </tr>
                            }
                        </tbody>
                    </table>

                    <div id="contentPager">
                        @Html.PagedListPager(
                                  Model,
                                  page => Url.Action("EmployeeFilter", new { page }))

                        Старница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount
                    </div>
                }
                <button class="btn btn-default" onclick="toPrevMain('admin')">Вернуться к списку</button>
            </div>
        </div>
    </div>
</div>