
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="~/Content/dashboard/assets/img/favicon.ico">
    <link rel="icon" type="image/png" sizes="96x96" href="~/Content/dashboard/assets/img/favicon.ico">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>ADBoards</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <!-- Bootstrap core CSS     -->
    <link href="~/Content/dashboard/assets/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Animation library for notifications   -->
    <link href="~/Content/dashboard/assets/css/animate.min.css" rel="stylesheet" />
    <!--  Paper Dashboard core CSS    -->
    <link href="~/Content/dashboard/assets/css/paper-dashboard.css" rel="stylesheet" />
    <!--  CSS for Demo Purpose, don't include it in your project     -->
    <link href="~/Content/dashboard/assets/css/demo.css" rel="stylesheet" />
    <!--  Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Muli:400,300' rel='stylesheet' type='text/css'>
    <link href="~/Content/dashboard/assets/css/themify-icons.css" rel="stylesheet">
    <link href="~/Content/PagedList.css" rel="stylesheet" />
</head>
<body>
    <div class="wrapper">
        <div class="sidebar" data-background-color="white" data-active-color="danger">
            <!--
                Tip 1: you can change the color of the sidebar's background using: data-background-color="white | black"
                Tip 2: you can change the color of the active button using the data-active-color="primary | info | success | warning | danger"
            -->
            <div class="sidebar-wrapper">
                <div class="logo">
                    <a href="@Url.Action("Index", "Home")" class="simple-text">
                        ADBoards
                    </a>
                </div>
                <ul class="nav">
                    <li>
                        <a href="@Url.Action("Index", "Categories")">
                            <i class="ti-panel"></i>
                            <p>Категория</p>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Companies")">
                            <i class="ti-user"></i>
                            <p>Компания</p>
                        </a>
                    </li>
                    <li class="active">
                        <a href="@Url.Action("Index", "TaskStatus")">
                            <i class="ti-view-list-alt"></i>
                            <p>Статус задачи</p>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("OwnIndex", "Taskas")">
                            <i class="ti-text"></i>
                            <p>Мои задачи</p>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Taskas")">
                            <i class="ti-pencil-alt2"></i>
                            <p>Все задачи</p>
                        </a>
                    </li>
                    @if (User.IsInRole("admin"))
                    {
                    <li>
                        <a href="@Url.Action("Register", "Account")">
                            <i class="fa fa-add-user"></i>
                            <p>Регистрация пользователя</p>
                        </a>
                    </li>
                    }
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar bar1"></span>
                            <span class="icon-bar bar2"></span>
                            <span class="icon-bar bar3"></span>
                        </button>
                        @Html.ActionLink("Главная", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                    <div class="collapse navbar-collapse">

                        @Html.Partial("_LoginPartial")

                    </div>
                </div>
            </nav>

            <div class="content">
                @RenderBody()
            </div>
            <!-- Footer -->
            <div class="footer">
                <div class="container" style="float: left;">
                    &copy; @DateTime.Now.Year – ADBoards
                </div>
            </div>

        </div>
    </div>

    <!--   Core JS Files   -->
    <script src="~/Content/dashboard/assets/js/jquery-1.10.2.js" type="text/javascript"></script>
    <script src="~/Content/dashboard/assets/js/bootstrap.min.js" type="text/javascript"></script>
    <!--  Checkbox, Radio & Switch Plugins -->
    <script src="~/Content/dashboard/assets/js/bootstrap-checkbox-radio.js"></script>
    <!--  Charts Plugin -->
    <script src="~/Content/dashboard/assets/js/chartist.min.js"></script>
    <!--  Notifications Plugin    -->
    <script src="~/Content/dashboard/assets/js/bootstrap-notify.js"></script>
    <!-- Paper Dashboard Core javascript and methods for Demo purpose -->
    <script src="~/Content/dashboard/assets/js/paper-dashboard.js"></script>
    <script src="~/Content/dashboard/assets/js/demo.js"></script>
    <script src="~/Scripts/app.js"></script>
</body>
</html>

