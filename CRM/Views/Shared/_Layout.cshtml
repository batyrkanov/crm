<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <link rel="apple-touch-icon" sizes="76x76" href="images/apple-icon.png">
    <link rel="icon" type="image/png" sizes="96x96" href="images/favicon.png">
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />
    <title>ADBoards</title>
    <link href="~/Content/main/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/main/css/coming-sssoon.css" rel="stylesheet" />
    <!--     Fonts     -->
    <link href="~/Content/dashboard/assets/css/icons/fontawesome-all.css" rel="stylesheet" />
    <link href="~/Content/main/css/GrandHotel.css" rel="stylesheet" type="text/css" />

</head>
<body>
    <nav class="navbar navbar-transparent navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="dropdown">

                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="mailto:office@adboards.kg">
                            <i class="glyphicon glyphicon-envelope"></i>
                            office@adboards.kg
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="fa fa-phone"></i>
                            0554644222
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Login","Account")">
                            <i class="fa fa-user"></i>
                            Войти
                        </a>
                    </li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container -->
    </nav>
    <div class="main" style="background-image: url('../../Content/main/images/video_bg.jpg')">
        <video id="video_background" preload="auto" autoplay loop="loop" muted="muted" volume="0">
            <source src="~/Content/main/video/time.webm" type="video/webm">
            <source src="~/Content/main/video/time.mp4" type="video/mp4">
        </video>
        <div class="cover black" data-color="black"></div>


        <div class="container">
            @RenderBody()
            <hr />

        </div>
        <!-- Footer -->
        <div class="footer">
            <div class="container">
                &copy; @DateTime.Now.Year – ADBoards
            </div>
        </div>
    </div>
    <!-- Scripts -->
    <script src="~/Content/main/js/jquery-1.10.2.js" type="text/javascript"></script>
    <script src="~/Content/main/js/bootstrap.min.js" type="text/javascript"></script>
</body>
</html>
